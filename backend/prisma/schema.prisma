datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id                      String    @id @default(cuid())
    addresses               Address[]
    email                   String    @unique
    role                    RoleEnum  @default(EMPLOYEE)
    avatar                  String?
    avatarId                String?
    firstName               String?
    lastName                String?
    gender                  GenderEnum?
    profession              String?
    phone                   String?
    accessToken             String?
    status                  StatusEnum @default(pending)
}

model Token {
  id                        String    @id @default(cuid())
  token                     String?
  userId                    String?
  expireAt                  DateTime?
  uId                       User? @relation(fields: [userId], references: [id])
}

model Address {
    id                      String    @id @default(cuid())
    country                 String?
    city                    String?
    addressLine1            String?
    addressLine2            String?
    user                    User?     @relation(fields: [userId], references: [id])
    userId                  String?
}

enum StatusEnum {
  pending
  active
  blocked
}

enum RoleEnum {
    ADMIN
    EMPLOYEE
}

enum GenderEnum {
    male
    female
}