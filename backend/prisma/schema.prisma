datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id                      String    @id @default(cuid())
    email                   String    @unique
    role                    String    @default("EMPLOYEE")
    firstName               String?
    lastName                String?
    status                  String    @default("pending")
    password                String
    tokens                  Token[]
}

model Token {
  id                        String    @id @default(cuid())
  token                     String?
  userId                    String?
  expireAt                  DateTime?
  uId                       User? @relation(fields: [userId], references: [id])
}
